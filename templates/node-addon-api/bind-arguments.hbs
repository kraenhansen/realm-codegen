{{#each arguments}}
  {{#if type.double}}
    Napi::Number arg_{{name}} = info[{{@index}}].As<Napi::Number>();
  {{/if}}
  {{#if type.string}}
    Napi::String arg_{{name}} = info[{{@index}}].As<Napi::String>();
  {{/if}}
  {{#if type.identifier}}
    ::{{ type.name }} arg_{{name}} = value_to_{{ snakeCase type.name }}(info[{{@index}}]);
  {{/if}}
{{/each}}